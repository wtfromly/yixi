/* pages/square/square.wxss */
.hotQuestion {
    font-size: 28rpx;
    margin-bottom: 5rpx;
    vertical-align:top;
}
.hotQuestion text{
    padding-bottom: 5rpx;
    margin-top: 5rpx;
    vertical-align:top;
}
.question_Main{
    text-align: center;
}
#fire{
    width:32px;
    height:24px;
} 
/* 热门问题 */


.Question {
    display: inline-block;
    font-size: 40rpx;
    color: #c3aa1a ;
    background-color: #494858; 
    padding-left: 20rpx;
}
.answerPreview{
    margin: 5%;
    font-size: 30rpx;
}
#p2_bold{
    font-weight: 800;
}
/* 重要部分加粗 */
.response{
    margin-top: 60rpx;
}
.response text{
    font-size: 30rpx;
    color: white;
    border: 3rpx;
    border-bottom-left-radius: 50rpx;
    border-top-left-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
    border-top-right-radius: 50rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}
/* 问题预览 */

#ask{
    background-color: #eeb3b7;
}
#answer{
    background-color: #aee6f7;
}
#add{
    background-color:#f3eeb4;
}
#thumb{
    padding-left: 80rpx;
    height: 24rpx;
    width: 64rpx;
}
#thumb_number{
    color: black;
    padding-left: 0rpx;
    padding-top: 5rpx;
}
/* 提问、回答、补充、点赞 */

.line{
    margin: 0 auto;
    margin-top: 10rpx;
    width: 100%;
    height: 20rpx;
    background-color: #96c3e0;
}
/* 横线 */


#more_answer{
    width: 200rpx;
    height: 200rpx;
    margin-top: 100rpx;
    border-radius: 50%;
    background-color: #8dc57e;
    display:flex;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
    margin-left: 500rpx;
    line-height: 200rpx;
    text-align: center;
    font-size: 36rpx;
    color: black;
}
